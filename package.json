{
  "name": "llm-mem",
  "version": "1.0.0",
  "description": "LLM Memory Management Tools - MCP Server and CLI",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "prepare": "echo 'Package downloaded. Please run: cd node_modules/llm-mem && pnpm install && pnpm build'",
    "postinstall": "echo 'Package installed. Please run: cd node_modules/llm-mem && pnpm install && pnpm build'",
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @llm-mem/shared build",
    "build:cli": "pnpm --filter @llm-mem/cli build",
    "build:mcp": "pnpm --filter @llm-mem/mcp build",
    "dev": "pnpm -r dev",
    "dev:shared": "pnpm --filter @llm-mem/shared dev",
    "dev:cli": "pnpm --filter @llm-mem/cli dev",
    "dev:mcp": "pnpm --filter @llm-mem/mcp dev",
    "test": "pnpm -r test",
    "test:shared": "pnpm --filter @llm-mem/shared test",
    "test:cli": "pnpm --filter @llm-mem/cli test",
    "test:mcp": "pnpm --filter @llm-mem/mcp test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "start:cli": "pnpm --filter @llm-mem/cli start",
    "start:mcp": "pnpm --filter @llm-mem/mcp start",
    "start:mcp:stdio": "pnpm --filter @llm-mem/mcp start:stdio",
    "start:mcp:http": "pnpm --filter @llm-mem/mcp start:http"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "flexsearch",
    "sqlite",
    "llm",
    "ai",
    "cli",
    "coverage"
  ],
  "author": "Memory Tools MCP Team",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
