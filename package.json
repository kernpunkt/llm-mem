{
  "name": "memory-tools-mcp",
  "version": "1.0.0",
  "description": "Memory Management MCP Server - Comprehensive memory tools for LLMs with FlexSearch and SQLite",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --transport=stdio",
    "start:http": "node dist/index.js --transport=http",
    "start:http:port": "node dist/index.js --transport=http --port=3001",
    "dev:http": "tsc --watch & node dist/index.js --transport=http",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "flexsearch",
    "sqlite",
    "llm",
    "ai"
  ],
  "author": "Memory Tools MCP Team",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@types/js-yaml": "^4.0.9",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.1.0",
    "flexsearch": "^0.8.205",
    "h3": "^1.15.3",
    "js-yaml": "^4.1.0",
    "sqlite3": "5.1.7",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  }
}
