{
  "name": "llm-mem",
  "version": "1.0.0",
  "description": "LLM Memory Management Tools - MCP Server and CLI",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "postinstall": "pnpm install",
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @llm-mem/shared build",
    "build:cli": "pnpm --filter @llm-mem/cli build",
    "build:mcp": "pnpm --filter @llm-mem/mcp build",
    "dev": "pnpm -r dev",
    "dev:shared": "pnpm --filter @llm-mem/shared dev",
    "dev:cli": "pnpm --filter @llm-mem/cli dev",
    "dev:mcp": "pnpm --filter @llm-mem/mcp dev",
    "test": "pnpm -r test",
    "test:shared": "pnpm --filter @llm-mem/shared test",
    "test:cli": "pnpm --filter @llm-mem/cli test",
    "test:mcp": "pnpm --filter @llm-mem/mcp test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "flexsearch",
    "sqlite",
    "llm",
    "ai",
    "cli",
    "coverage"
  ],
  "author": "Memory Tools MCP Team",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
