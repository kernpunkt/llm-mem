{
  "name": "@llm-mem/mcp",
  "version": "1.1.0",
  "description": "Memory Management MCP Server - Comprehensive memory tools for LLMs with FlexSearch, SQLite, and category/tag validation",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc && shx cp -r src/assets dist/",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --transport=stdio",
    "start:http": "node dist/index.js --transport=http",
    "start:http:port": "node dist/index.js --transport=http --port=3001",
    "dev:http": "tsc --watch & node dist/index.js --transport=http",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@llm-mem/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "dotenv": "^17.1.0",
    "h3": "^1.15.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
