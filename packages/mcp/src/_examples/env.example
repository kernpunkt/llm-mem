# MCP Server Environment Configuration
# Copy this file to .env and fill in your actual values

# Memory Storage Configuration
MEMORY_STORE_PATH=./memories
MEMORY_INDEX_PATH=./memories/index

# Memory Configuration File (Optional)
# Path to a YAML or JSON file containing memory configuration, including
# category-based frontmatter templates. See memory-config.example.yaml for format.
# MEMORY_CONFIG_PATH=./config/memory-config.yaml

# Category and Tag Restrictions (Optional)
# If not set, any categories and tags are allowed
# If set, only the specified values are allowed (comma-separated)

# Example: ALLOWED_CATEGORIES=work,personal,research,ideas
ALLOWED_CATEGORIES=DOC,CTX,ADR

# Example: ALLOWED_TAGS=important,urgent,review,archive
ALLOWED_TAGS=

# =============================================================================
# FlexSearch Configuration
# =============================================================================
# These environment variables control the FlexSearch indexing and search behavior
# All variables are optional and have sensible defaults
# see https://github.com/nextapps-de/flexsearch/blob/master/README.md for a deeper understanding

# Tokenization Options
# --------------------
# Tokenization strategy for indexing text
# Options: strict, forward, reverse, full, tolerant
# Default: forward
FLEXSEARCH_TOKENIZE=forward

# Search resolution (1-20, higher = more precise but slower)
# Default: 9
FLEXSEARCH_RESOLUTION=9

# Search depth (1-10, higher = more thorough but slower)
# Default: 3
FLEXSEARCH_DEPTH=3

# Search threshold (0-10, lower = more lenient matching)
# Default: 1
FLEXSEARCH_THRESHOLD=1

# Maximum number of search results
# Default: 100
FLEXSEARCH_LIMIT=100

# Enable search suggestions
# Default: true
FLEXSEARCH_SUGGEST=true

# Encoder Options
# ---------------
# Character encoding strategy
# Options: exact, normalize, latinbalance, latinadvanced, latinextra, latinsoundex, cjk
# Default: normalize
FLEXSEARCH_CHARSET=normalize

# Language for language-specific optimizations
# Options: en, de, fr
# Default: not set (uses default)
FLEXSEARCH_LANGUAGE=en

# Stopwords Configuration
# ----------------------
# JSON array of stopwords to filter out during indexing
# Example: ["the", "a", "an", "and", "or", "but"]
# Default: English common stopwords (148 words)
FLEXSEARCH_STOPWORDS=["the", "a", "an", "and", "or", "but", "in", "on", "at", "to", "for", "of", "with", "by"]

# Term Length Limits
# ------------------
# Minimum term length to index (1-10)
# Default: 2
FLEXSEARCH_MIN_LENGTH=2

# Maximum term length to index (5-50)
# Default: 20
FLEXSEARCH_MAX_LENGTH=20

# Context Search Options
# ----------------------
# Enable context-aware search (finds terms near each other)
# Default: false
FLEXSEARCH_CONTEXT=false

# Context search resolution (1-20, higher = more precise)
# Default: 5
FLEXSEARCH_CONTEXT_RESOLUTION=5

# Context search depth (1-10, higher = more thorough)
# Default: 3
FLEXSEARCH_CONTEXT_DEPTH=3

# Enable bidirectional context search
# Default: true
FLEXSEARCH_CONTEXT_BIDIRECTIONAL=true
