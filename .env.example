# Memory Tools MCP Server Environment Configuration

# Server Configuration
# Transport mode: "stdio" or "http"
TRANSPORT=stdio

# HTTP server port (only used when TRANSPORT=http)
PORT=3000

# Memory Storage Paths
# Base directory for memory files
NOTESTORE_PATH=./memories

# FlexSearch index storage path
INDEX_PATH=./memories/index

# FlexSearch Configuration
# Tokenization method: "strict", "forward", "reverse", "full", "tolerant"
FLEXSEARCH_TOKENIZE=forward

# Search resolution (1-20, higher = more precise but slower)
FLEXSEARCH_RESOLUTION=9

# Search depth (1-10, higher = more thorough but slower)
FLEXSEARCH_DEPTH=3

# Search threshold (0-10, higher = stricter matching)
FLEXSEARCH_THRESHOLD=1

# Maximum search results (1-1000)
FLEXSEARCH_LIMIT=100

# Enable suggestions for fuzzy matching (true/false)
FLEXSEARCH_SUGGEST=true

# Character encoding: "exact", "normalize", "latinbalance", "latinadvanced", "latinextra", "latinsoundex", "cjk"
FLEXSEARCH_CHARSET=normalize

# Language support: "en", "de", "fr" (optional)
FLEXSEARCH_LANGUAGE=en

# Stopwords (JSON array of strings to filter out)
FLEXSEARCH_STOPWORDS=["the","a","an","and","or","but","in","on","at","to","for","of","with","by","is","are","was","were","be","been","being","have","has","had","do","does","did","will","would","could","should","may","might","must","can","this","that","these","those","i","you","he","she","it","we","they","me","him","her","us","them","my","your","his","her","its","our","their","mine","yours","hers","ours","theirs","what","when","where","why","how","which","who","whom","whose","if","then","else","than","as","so","because","since","while","although","though","very","much","many","few","some","any","all","each","every","no","not","yes","here","there","where","now","then","today","yesterday","tomorrow","up","down","out","off","over","under","again","further","thence","once","no","nor","not","only","own","same","so","than","too","very","s","t","can","will","just","don","should","now"]

# Minimum term length for indexing (1-10)
FLEXSEARCH_MIN_LENGTH=2

# Maximum term length for indexing (5-50)
FLEXSEARCH_MAX_LENGTH=20

# Enable context search for better relevance (true/false)
FLEXSEARCH_CONTEXT=false

# Context search resolution (1-20)
FLEXSEARCH_CONTEXT_RESOLUTION=5

# Context search depth (1-10)
FLEXSEARCH_CONTEXT_DEPTH=3

# Enable bidirectional context search (true/false)
FLEXSEARCH_CONTEXT_BIDIRECTIONAL=true

# Example configurations for different use cases:

# For high-precision search (slower but more accurate):
# FLEXSEARCH_TOKENIZE=strict
# FLEXSEARCH_RESOLUTION=15
# FLEXSEARCH_DEPTH=5
# FLEXSEARCH_THRESHOLD=3

# For fast search with fuzzy matching:
# FLEXSEARCH_TOKENIZE=tolerant
# FLEXSEARCH_RESOLUTION=5
# FLEXSEARCH_DEPTH=2
# FLEXSEARCH_THRESHOLD=0

# For German language support:
# FLEXSEARCH_LANGUAGE=de
# FLEXSEARCH_CHARSET=latinadvanced

# For Chinese/Japanese/Korean support:
# FLEXSEARCH_CHARSET=cjk
# FLEXSEARCH_STOPWORDS=[]  # Empty array for CJK languages

# For context-aware search:
# FLEXSEARCH_CONTEXT=true
# FLEXSEARCH_CONTEXT_RESOLUTION=7
# FLEXSEARCH_CONTEXT_DEPTH=4
